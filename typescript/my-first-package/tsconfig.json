{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "outDir": "bin",
    "baseUrl": ".",
    "lib": ["es5", "es6", "dom"],
    "types": [     "node" ],
    "paths": {
      "*": ["*"]
    }
  }
}
